page {
    background: url(http://ct-tph.oss-cn-hangzhou.aliyuncs.com/tanzuji/page_head_bg%402x.png) no-repeat #f6f6fc;
    background-size: 100%;
    padding-bottom: 50rpx;
}

.head-info {
    padding: 150rpx 0 40rpx;
    position: relative;
}

.head-info .user {
    align-items: center;
    display: flex;
    position: relative;
    z-index: 2;
}

.head-info .user .avatar {
    padding-left: 60rpx;
}

.head-info .user .avatar .van-image {
    box-shadow: 10rpx 10rpx 20rpx 0 rgba(110, 43, 43, 0.1);
    margin: 0 auto;
}

.head-info .info {
    margin-left: 24rpx;
    width: 380rpx;
}

.head-info .app {
    padding-right: 80rpx;
    align-items: center;
  display: flex;
  flex-direction: column;
}

.head-info .info .user-name {
    position: relative;
    z-index: 3;
}

.head-info .info .user-phone {
    align-items: center;
    display: flex;
    margin-top: 24rpx;
    position: relative;
    z-index: 3;
}

.head-info .info .user-phone .iconfont {
    margin-right: 10rpx;
}

.head-info .message-icon {
    background: url(http://ct-tph.oss-cn-hangzhou.aliyuncs.com/tanzuji/my/%E6%B6%88%E6%81%AF%402x.png) no-repeat;
    background-size: 100%;
    height: 88rpx;
    margin-left: 20rpx;
    position: relative;
    width: 80rpx;
}

.head-info .message-icon .dot {
    background: #ff7e00;
    border-radius: 200rpx;
    color: #fff;
    line-height: 42rpx;
    position: absolute;
    right: -25rpx;
    text-align: center;
    top: -33rpx;
    width: 58rpx;
}

.head-info .message-icon .iconfont {
    font-size: 60rpx;
}

.cer-bar {
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
}

.cer-bar .item {
    flex: 1;
    text-align: center;
}

.cer-bar .item .bold {
    line-height: 110rpx;
}

.cer-bar .item image {
    height: 100rpx;
    margin-bottom: 10rpx;
    width: 100rpx;
}

.state-bar {
    background: url(http://ct-tph.oss-cn-hangzhou.aliyuncs.com/tanzuji/my/%E5%B7%B2%E7%A2%B3%E4%B8%AD%E5%92%8C%402x.png) no-repeat;
    background-size: 100%;
    height: 508rpx;
    margin: 0 auto;
    position: relative;
    width: 726rpx;
}

.state-bar .type-text {
    top: 60rpx;
}

.state-bar .num,.state-bar .type-text {
    color: #fff;
    left: 80rpx;
    position: absolute;
}

.state-bar .num {
    font-size: 48rpx;
    top: 130rpx;
    width: 400rpx;
}

.state-bar .f16 {
    margin: 0 auto;
    padding-top: 260rpx;
    text-align: center;
    width: 526rpx;
}

.state-bar .f16 text {
    color: #ff7e00;
}

.state-bar .view {
    align-items: center;
    bottom: 84rpx;
    color: #029767;
    display: flex;
    justify-content: center;
    opacity: .6;
    position: absolute;
    text-align: center;
    width: 726rpx;
}

.state-bar .view .iconfont {
    font-weight: 400;
    margin-left: 10rpx;
}

.state-bar.ccer {
    background: url(http://ct-tph.oss-cn-hangzhou.aliyuncs.com/tanzuji/%E8%AE%A1%E7%AE%97%E7%BB%93%E6%9E%9C%E5%8D%A1%E7%89%87%402x.png) no-repeat;
    background-size: 100%;
    height: 606rpx;
}

.state-bar.ccer .f16 {
    padding-top: 300rpx;
    width: 590rpx;
}

.state-bar.ccer .footer {
    color: #029767;
    justify-content: space-between;
    margin: 80rpx auto 0;
    opacity: .6;
    width: 590rpx;
}

.state-bar.ccer .footer,.state-bar.ccer .footer view {
    align-items: center;
    display: flex;
}

.state-bar.ccer .footer view {
    flex: 1;
    justify-content: center;
    text-align: center;
}

.state-bar.ccer .footer view .iconfont {
    font-weight: 400;
    margin-left: 10rpx;
}

.swiper-indicator {
    background: #ace2cf;
    border-radius: 8rpx;
    height: 8rpx;
    margin: 0 auto 50rpx;
    position: relative;
    width: 50rpx;
}

.swiper-indicator .dots {
    background: #029767;
    border-radius: 8rpx;
    height: 8rpx;
    position: absolute;
    top: 0;
    width: 28rpx;
}

.swiper-indicator .active-0 {
    left: 0;
}

.swiper-indicator .active-1 {
    right: 0;
}

.nav-bar {
    background: #f6f6fc;
    border-radius: 32rpx;
    box-shadow: 24rpx 16rpx 24rpx 0 #ebebff,-24rpx -16rpx 24rpx 0 #fbfbff;
    margin: 0 auto;
    padding: 0 30rpx;
    width: 630rpx;
}

.nav-bar .item {
    height: 100rpx;
    justify-content: space-between;
}

.nav-bar .item,.nav-bar .item .title {
    align-items: center;
    display: flex;
}

.nav-bar .item .title image {
    height: 60rpx;
    margin-right: 24rpx;
    width: 60rpx;
}

.nav-bar .item .title text {
    background: #ff7e00;
    border-radius: 200rpx;
    color: #fff;
    line-height: 42rpx;
    margin-left: 10rpx;
    text-align: center;
    width: 58rpx;
}

.nav-bar .item .icon {
    background: url(http://ct-tph.oss-cn-hangzhou.aliyuncs.com/tanzuji/back_btn%402x.png) no-repeat;
    background-size: 100%;
    height: 90rpx;
    transform: rotate(180deg);
    width: 90rpx;
}

.count {
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  margin: 40rpx 40rpx 0;
  padding: 40rpx 0 25rpx;
  position: relative;
  z-index: 3;
}

.count-item {
  flex: 1;
  text-align: center;
}

.count-data {
  color: #29c38e;
  font-family: PingFangSC-Medium,PingFang SC;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 50rpx;
  margin-bottom: 16rpx;
}

.count-data text {
  font-size: 38rpx;
}

.count-title {
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 33rpx;
}
.tab-box {
    border-radius: 32rpx;
  background: #fff;
  margin-top: 40rpx;
}

.tab-head {
  align-items: center;
  border-bottom: 1rpx solid hsla(0,0%,89%,.5);
  display: flex;
  justify-content: center;
}

.tab-head .tab-name {
  color: #333;
  font-size: 32rpx;
  font-weight: 400;
  height: 88rpx;
  line-height: 88rpx;
  position: relative;
  text-align: center;
  width: 33.333%;
}

.tab-head .tab-name.def {
  color: #333;
}

.tab-head .tab-name.active {
  color: #29c38e;
}

.tab-head .tab-name.active::after {
  background: #29c38e;
  bottom: 0;
  content: "";
  display: block;
  height: 8rpx;
  left: 0;
  position: absolute;
  width: 100%;
}

.tab-item {
  position: relative;
  border-radius: 32rpx;
}

.tab-item,.tab-no-data {
  min-height: calc(100vh - 680rpx);
}

.tab-no-data {
  align-items: center;
  display: flex;
  justify-content: center;
}

.tab-no-data no-data {
  width: 100%;
}

.medal-box {
  background-color: #fff;
  border-radius: 16rpx;
  margin-top: 40rpx;
}

.medal-title {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 45rpx;
  padding: 24rpx;
}

.medal-title text {
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
}

.certificate-main,.medal-main {
  align-items: flex-start;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.certificate-item,.medal-item {
  align-items: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 24rpx;
  width: 33.33%;
}

.medal-pic {
  margin-bottom: 16rpx;
  overflow: hidden;
}

.medal-pic,.medal-pic image {
  height: 143rpx;
  width: 152rpx;
}

.medal-grade {
  margin-bottom: 16rpx;
  overflow: hidden;
}

.medal-grade,.medal-grade image {
  height: 200rpx;
  width: 200rpx;
}

.grey {
  filter: grayscale(100%);
}

.medal-tip {
  word-wrap: break-word;
  color: #777;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 28rpx;
  text-align: center;
  width: 80%;
  word-break: break-all;
}
